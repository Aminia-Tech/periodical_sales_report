<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_periodical_sales">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-if="(date_from and date_to)">
                        <div class="row mt32 mb32">
                            <div>
                                <p class="text-center">
                                    Sale order report from date <span t-esc="date_from"/> to date <span t-esc="date_to"/>
                                </p>
                            </div>
                        </div>
                    </t>
                    <t t-else="period">
                        <div class="row mt32 mb32">
                            <div>
                                <p class="text-center">
                                    Sale order report for: <span t-esc="period"/><br/>
                                </p>
                            </div>
                        </div>
                    </t>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Quotation Number</th>
                                <th class="text-left">Order Date</th>
                                <th class="text-left">Customer</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="doc">
                                <td>
                                    <span t-esc="doc['name']" />
                                </td>
                                <td class="text-left" style="white-space: text-nowrap;">
                                    <span t-esc="doc['date_order']" />
                                </td>
                                <td class="text-left" style="white-space: text-nowrap;">
                                    <span t-esc="doc['partner']" />
                                </td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <span  t-esc="doc['amount_total']"  />
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td class="text-right"><b>Total</b></td>
                                <td class="text-right" style="white-space: text-nowrap;">
                                    <b><span t-esc="total_sale" /></b>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
